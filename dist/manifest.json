{
  "manifest_version": 2,

  "name": "Kiosker the Grouch",
  "description": "An extension to facilitate using Chrome as a kiosk.",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
        "js/background.js"
    ]
  },

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
