{
  "manifest_version": 2,

  "name": "Kiosker the Grouch",
  "description": "An extension to facilitate using Chrome as a kiosk or slide show.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon128.png"
  },
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
        "js/background.js"
    ]
  },

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
